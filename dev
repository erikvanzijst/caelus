#!/usr/bin/env bash
set -e

case "$1" in
  build) devcontainer build --workspace-folder . ;;
  up)    devcontainer up --workspace-folder . ;;
  sh)    devcontainer exec --workspace-folder . bash ;;
  run)   shift; devcontainer exec --workspace-folder . "$@" ;;
  down)  docker compose down --remove-orphans ;;
  *)
    echo "usage: ./dev {build|up|sh|run|down}"
    ;;
esac
